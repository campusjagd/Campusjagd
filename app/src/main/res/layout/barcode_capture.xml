<?xml version="1.0" encoding="utf-8"?>
<!-- from https://github.com/googlesamples/android-vision/blob/master/visionSamples/barcode-reader/app/src/main/res/layout/barcode_capture.xml
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/black">

    <de.tubs.campusjagd.barcode.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.tubs.campusjagd.barcode.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </de.tubs.campusjagd.barcode.CameraSourcePreview>

</LinearLayout>
